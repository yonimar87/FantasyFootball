<h1>Log In</h1>

<%= form_tag login_path do %>
<div class="row">
  <div class="form-group col-md-6 offset-md-3">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, :class => 'form-control' %>
  </div>

  <div class="form-group col-md-6 offset-md-3">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, :class => 'form-control'%>
  </div>
</div>
<%= submit_tag "LOG IN" %>
<% end %>
